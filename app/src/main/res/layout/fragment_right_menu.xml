<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left"
    >

    <LinearLayout
        android:id="@+id/ll_unlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="52dp"
        >

        <ImageView
            android:id="@+id/iv_unlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"

            />

        <TextView
            android:id="@+id/tv_unlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登陆"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_logined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_logined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/userbg"
            />

        <TextView
            android:id="@+id/tv_logined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="狗狗"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新版本"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_marginBottom="12dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/share_little_bg"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_share_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fun_share_weixin"
                android:layout_marginLeft="16dp"
                />

            <ImageView
                android:id="@+id/iv_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/addimport_qq"
                android:layout_marginLeft="12dp"
                />

            <ImageView
                android:id="@+id/iv_share_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fun_share_friends"
                android:layout_marginLeft="12dp"
                />

            <ImageView
                android:id="@+id/iv_share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fun_share_weibo"
                android:layout_marginLeft="12dp"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>