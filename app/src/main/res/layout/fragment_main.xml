<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_type_more"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/type_more"
            />
        <com.example.administrator.newclient.view.HorizontalListView
            android:id="@+id/hl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_type_more"
            />

    </RelativeLayout>


    <com.example.administrator.newclient.xlistView.XListView
        android:id="@+id/hl_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.administrator.newclient.xlistView.XListView>

</LinearLayout>